<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0,minimal-ui">
    <meta name="description" content="Admin, Dashboard, Semantic-ui">
    <meta name="viewport" content="width=device-width" />

    <title>SISTEMA DE CONTROL JURIDICO</title>
    <link href="~/Content/dist1/semantic.min.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/png" href="~/Content/img/icon.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link href="~/Content/css/style.css" rel="stylesheet" />

    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="http://code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <style>
        .marginlefting {
            margin-left: 60px !important;
        }

        .displaynone {
            display: none !important;
        }

        .displayblock {
            display: block !important;
        }

        .sidebar .item i {
            font-size: 24px;
            margin-top: -5px !important;
        }

        .logo {
            height: 48px !important;
            padding: 10px !important;
        }

            .logo img {
                width: 15% !important;
                height: 38px !important;
            }

        .title.item {
            padding: .92857143em 1.14285714em !important;
        }

        .dropdown .menu .header {
            padding-top: 3.9px !important;
            padding-bottom: 3.9px !important;
        }
    </style>
</head>
<body>
    <div class="ui sidebar vertical left menu overlay visible" style="-webkit-transition-duration: 0.1s; overflow: visible !important;background-color:#233245; width:200px">
        <div class="item logo">
            <img style="display: block;margin: 0 auto; padding-bottom:10px;" src="~/Content/img/muni.gif" />
        </div>
        <a href="~/Home/Index" style="color:white;font-size:18px; font-family:sans-serif; border-top: 1px solid #000; border-bottom: 1px solid #000;" class="title item">
            <span><i class="fa fa-home"></i></span>Menu Principal
        </a>
        @Html.ActionLink("Menú principal", "Index", "Home");
        <div class="ui accordion">
            <a style="color:white;font-size:18px;  border-bottom: 1px solid #000; font-family:sans-serif" class="title item">
                <span><i class="fa fa-archive"></i></span> Documentos
            </a>
            <div class="content">
                <a class="item" style="color:white;font-size:14px; font-family:sans-serif; text-align:center; border-bottom: 1px solid #000;" href="~/Documento/Index">
                    Oficios
                </a>
                @Html.ActionLink("Oficio", "Index", "Documento");
                <a class="item" style="color:white;font-size:14px; font-family:sans-serif; text-align:center; border-bottom: 1px solid #000;" href="~/DocumentoExpediente/Index">
                    Expedientes
                </a>
            </div>

            <a style="color:white;font-size:18px;  border-bottom: 1px solid #000; font-family:sans-serif;" class="title item">
                <span><i class="fa fa-users"></i></span> Personas
            </a>
            <div class="content">
                <a class="item" style="color:white;font-size:14px; font-family:sans-serif; text-align:center;  border-bottom: 1px solid #000;" href="~/PersonaFisica/Index">
                    Fisicas
                </a>
                <a class="item" style="color:white;font-size:14px; font-family:sans-serif; text-align:center;  border-bottom: 1px solid #000;" href="~/Personas/Index">
                    Jurídicas
                </a>
            </div>

            <a style="color:white;font-size:18px;  border-bottom: 1px solid #000; font-family:sans-serif;" class="title item">
                <span><i class="fa fa-balance-scale"></i></span> Procesos
            </a>
            <div class="content">
                <a class="item" style="color:white;font-size:14px; font-family:sans-serif; text-align:center; border-bottom: 1px solid #000;" href="~/Caso/Index">
                    Administrativos
                </a>
                <a class="item" style="color:white;font-size:14px; font-family:sans-serif; text-align:center; border-bottom: 1px solid #000;" href="~/CasoJudicial/Index">
                    Judiciales
                </a>
            </div>

            <a href="~/Home/Ayuda" style="color:white;font-size:18px; font-family:sans-serif;  border-bottom: 1px solid #000;" class="title item">
                <span><i class="fa fa-question-circle"></i></span> Ayuda
            </a>
        </div>
    </div>
    <div class="pusher">
        <div class="ui menu asd borderless" style="border-radius: 0!important; border: 0; margin-left: 200px; background-color:#35475e;-webkit-transition-duration: 0.1s;">

            @*<a class="item openbtn">
                    <i class="icon content"></i>
                </a>*@
            @*<a class="item">
                    Messages
                </a>*@

            <div class="right menu">
                @Html.Partial("_LoginPartial")
                @*<div class="ui dropdown item" style="font-size:14px; background-color:#233245; color:white">

                        <b>Usuario</b> <i class="user icon"></i>

                        <div class="menu">
                            <a class="item" href="~/MasterPage/Ayuda">Necesita Ayuda?</a>
                            <a class="item" href="~/Login">Salir</a>
                        </div>
                    </div>*@
                @*<div class="item">
                        <div class="ui primary button">Sign Up</div>
                    </div>*@
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery-3.1.0.js"></script>
    @*<script src="js/jquery-3.1.0.js"></script>*@
    <script src="~/Content/dist1/semantic.min.js"></script>
    @*<script src="dist/semantic.min.js"></script>*@
    <script>
        $(".openbtn").on("click", function () {
            $(".ui.sidebar").toggleClass("very thin icon");
            $(".asd").toggleClass("marginlefting");
            $(".sidebar z").toggleClass("displaynone");
            $(".ui.accordion").toggleClass("displaynone");
            $(".ui.dropdown.item.displaynone").toggleClass("displayblock");

            $(".logo").find('img').toggle();

        })
        $(".ui.dropdown").dropdown({
            allowCategorySelection: true,
            transition: "fade up",
            context: 'sidebar',
            on: "hover"
        });

        $('.ui.accordion').accordion({
            selector: {
            }
        });
    </script>
    <div class="main-content">
        @RenderBody()
    </div>
</body>
</html>